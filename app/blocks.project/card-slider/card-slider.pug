mixin card-slider()
  +b.card-slider&attributes(attributes)
    +e.slider-container
      +e.slider
        - let slider = ['1', '2', '3', '4', '5', '6', '7'];
        - let i = 1;
        each item in slider
          +e.item
            img(src='img/card-slider/' + item + '.jpg' alt='Изображение ' + i)
            - i++;
      +e.navigation
    +e.previews-container
      +e.slider-previews
        - let sliderPreview = ['1', '2', '3', '4', '5', '6', '7'];
        - let j = 1;
        each itemPreview in sliderPreview
          +e.item-preview
            img(src='img/card-slider/' + itemPreview + '_preview.jpg' alt='Изображение ' + j)
            - j++;
